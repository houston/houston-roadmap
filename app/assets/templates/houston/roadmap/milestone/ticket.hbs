<tr class="ticket {{#firstReleaseAt}}ticket-released{{/firstReleaseAt}} {{#resolved}}ticket-resolved{{/resolved}} {{#closedAt}}ticket-closed{{/closedAt}}" data-id="{{id}}">
  <td class="ticket-sequence">
    {{sequence}}
  </td>
  <td class="ticket-effort">
    {{estimatedEffort}}
    {{#firstReleaseAt}}
      <i class="icon-ok-sign" rel="tooltip" title="Released {{formatDate this}}"></i>
    {{/firstReleaseAt}}
  </td>
  <td class="ticket-type ticket-type-{{type}}"></td>
  <td class="ticket-summary">
    {{summary}}
    <a href="{{ticketUrl}}" target="_blank" rel="ticket" data-number="{{number}}">[#{{number}}]</a>
    {{#tags}}
      <span class="ticket-tag" style="background-color: #{{color}}">{{name}}</span>
    {{/tags}}
    {{#if milestoneName}}
      <span class="ticket-tag" style="background-color: #333">{{milestoneName}}</span>
    {{/if}}
  </td>
  <td class="ticket-command">
    <button tabindex="-1" class="btn btn-remove">Remove</button>
  </td>
</tr>
