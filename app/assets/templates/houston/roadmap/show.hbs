<div id="roadmap" class="roadmap callout callout-banner"></div>

<h2 class="light">Milestones</h2>

<div id="milestones_view">
  <table class="table table-roadmap-milestones">
    <thead>
      <th class="milestone-name">Name</th>
      <th class="milestone-startDate">Starts</th>
      <th class="milestone-duration">Duration</th>
      <th class="milestone-tickets">Tickets</th>
      <th class="milestone-locked">Locked</th>
    </thead>
    <tbody id="milestones">
      {{#each milestones}}
      <tr class="milestone inactive">
        <td class="milestone-name"><a href="/roadmap/milestones/{{id}}">{{name}}</a></td>
        <td class="milestone-startDate date">{{{formatDateWithYear startDate}}}</td>
        <td class="milestone-duration">{{durationOfMilestone this}}</td>
        <td class="milestone-tickets {{#if tickets}}{{else}}zero{{/if}}">{{tickets}}</td>
        <td class="milestone-locked">
          {{#if locked}}
            <i class="fa fa-lock"></i>
          {{else}}
            <i class="fa fa-unlock-alt"></i>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
