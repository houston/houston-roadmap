<% Houston.config.project_colors.each do |name, value| %>
  $<%= name %>: <%= value.rgb %>;
<% end %>

.roadmap-band {
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> {
      rect.roadmap-milestone {
        &.certainty-low {
          fill: rgba(<%= value.rgb %>, 0.15);
          stroke: lighten(<%= value.rgb %>, 40%);
        }
        &.certainty-mid {
          fill: rgba(<%= value.rgb %>, 0.27);
          stroke: lighten(<%= value.rgb %>, 20%);
        }
      }
    }
  <% end %>
}
