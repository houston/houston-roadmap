<% Houston.config.project_colors.each do |name, value| %>
  $<%= name %>: <%= value.rgb %>;
<% end %>

.roadmap-band {
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> {
      .roadmap-milestone, .roadmap-milestone-placeholder {
        &::before { background: <%= value.rgb %>; }
      }
    }
  <% end %>
}

body.dashboard .roadmap-band {
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> {
      .roadmap-milestone { border-color: <%= value.rgb %>; }
      .roadmap-milestone-progress { background: rgba(<%= value.rgb %>, 0.75); }
      .roadmap-milestone.completed {
        color: rgba(255, 255, 255, 0.66);
        .roadmap-milestone-progress { background: <%= value.rgb %>; }
      }
    }
  <% end %>
}
